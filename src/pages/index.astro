---
import Layout from '~/layouts/PageLayout.astro';
import Stats from '~/components/widgets/Stats.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Brands from '~/components/widgets/Brands.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Brandify Media - Best Web Development Company in Abu Dhabi',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Solutions',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:bulb',
      },
      { text: 'Projects', href: '#features', icon: 'tabler:folder', },
    ]}
    image={{ src: '~/assets/images/hero-image.svg', alt: 'Brandify Media Hero Image' }}
  >
    <Fragment slot="title">
      Transforming
 <span class="hidden xl:inline"></span>
      <span class="text-accent dark:text-white highlight"> Digital Experiences</span> that define brands.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Brandify Media</span> is focused on innovation and creativity, offering a comprehensive suite of services including web design and development, app development, user experience design, and e-commerce solutions. </span
      >
      <span class="block mb-1 sm:hidden font-light text-dark-600">Brandify Media is focused on innovation and creativity, offering a comprehensive suite of services including web design and development, app development, user experience design, and e-commerce solutions. </span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Stats Widget ****************** -->

  <Stats
    title="Driving Digital Success: Our Impact in Numbers"
    subtitle="Discover the measurable impact of partnering with Brandify Media. From increased conversions to lightning-fast websites, explore the statistics that showcase our commitment to driving digital success for our clients."
    stats={[
      { title: 'Performance', amount: '+50%' },
      { title: 'Bug-free code', amount: '99%' },
      { title: 'User Ratings', amount: '5*' },
      { title: 'Client Retention', amount: '75%' },
    ]}
  />

    <!-- Features2 Widget ************** -->

    <Features2
    title="Elevate Your Digital Presence"
    subtitle="Explore Our Comprehensive Suite of Digital Solutions"
    tagline="Transforming Ideas into Digital Brilliance"
    items={[
      {
        title: 'Web Development',
        description: "Craft visually stunning and highly functional websites tailored to your brand's unique needs.",
        icon: 'flat-color-icons:template',
      },
      {
        title: 'App Development',
        description:
          "Turn your app idea into reality with our expert team of developers and designers.",
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Web Application',
        description:
          "Build custom web applications to streamline your business processes and enhance user experience.",
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'E-Commerce Solutions',
        description:
          "Unlock the full potential of your online store with our customized e-commerce solutions.",
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Hosting',
        description:
          "Ensure reliable hosting for your website with our secure and scalable hosting services.",
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Payment Gateways',
        description: "Seamlessly integrate payment gateways to streamline transactions and enhance user experience.",
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'SEO',
        description: "Boost your online visibility and drive organic traffic with our strategic SEO solutions.",
        icon: 'flat-color-icons:database',
      },
      {
        title: 'Website Themes',
        description:
          "Browse our collection of themes and templates to find the perfect design for your website.",
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'Digital Transformation',
        description: "Embrace innovation and leverage technology to transform your business for the digital age.",
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gray-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

    <!-- Brands Widget ****************** -->

    <Brands
    title="Our Web Technology Arsenal"
    subtitle="Discover the robust web technologies we harness to create dynamic and engaging online experiences."
    icons={[]}
    images={[
      {
        src: 'https://brandify-site-images.s3.me-central-1.amazonaws.com/brand-logos/astrojs.svg',
        alt: 'AstroJS',
      },
      {
