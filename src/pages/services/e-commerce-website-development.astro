---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

const metadata = {
  title: 'e-Commerce Website Develoment | Brandify Media',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
  tagline="e-Commerce Site Development"
  actions={[
    { variant: 'primary', target: '_blank', text: 'Get Started', href: '/contact' },
    { text: 'Learn more', href: '#features' },
  ]}
  image={{
    src: 'https://images.unsplash.com/photo-1580481072645-022f9a6dbf27?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    alt: 'AstroWind Hero Image',
  }}
>
  <Fragment slot="title">
    Elevate Your Online Store with <br /> <span class="text-accent dark:text-white highlight"
      >Professional e-Commerce Solutions</span>
  </Fragment>

  <Fragment slot="subtitle">
    <span class="hidden sm:inline">
    <span class="font-semibold">Turn browsers into buyers </span>with our comprehensive e-commerce site development services.</span
    >
    From user-friendly interfaces to secure payment gateways, we create e-commerce sites that drive sales and delight customers. 
  </Fragment>
</Hero2>

  <!-- Features3 Widget ************** -->

  <Features3
    id="features"
    title="Strategically Achieve Your Online Store Business Goals"
    subtitle="Our e-commerce site development service is designed to help businesses establish a strong online presence and sell products or services effectively. Whether you're a small boutique or a large enterprise, we have the expertise to build an e-commerce site that meets your needs and exceeds your expectations."
    tagline="Service Overview"
    columns={2}
    items={[
      {
        title: 'Increased Sales',
        description: `Boost revenue and grow your business with an e-commerce site that makes it easy for customers to find and purchase products. `,
        icon: 'tabler:square-number-1',
      },
      {
        title: 'Enhanced Customer Experience',
        description:
          'Provide a seamless shopping experience across all devices, from browsing to checkout.',
        icon: 'tabler:square-number-2',
      },
      {
        title: 'Secure Transactions',
        description: 'Protect sensitive customer information and ensure safe transactions with robust security measures and PCI compliance.',
        icon: 'tabler:square-number-3',
      },
      {
        title: 'Scalability',
        description: `Scale your e-commerce site as your business grows, with the ability to add new products, features, and functionalities as needed.`,
        icon: 'tabler:square-number-4',
      },
      {
        title: 'Global Reach',
        description: `Reach customers around the world and expand your market reach with an e-commerce site that is accessible 24/7.`,
        icon: 'tabler:square-number-5',
      },
      {
        title: 'Cost-Efficiency',
        description: ` Save on overhead costs associated with brick-and-mortar stores while reaching a wider audience and maximizing your return on investment (ROI).`,
        icon: 'tabler:square-number-6',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1521517407911-565264e7d82d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80',
      alt: 'Colorful Image',
    }}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: '1.	Concept & Planning',
        description:
          'We start by understanding your app idea and business objectives, conducting market research to identify opportunities and challenges.',
        icon: 'tabler:wand',
      },
      {
        title: '2.	Design & Development',
        description:
          'Our team of designers and developers work together to create a visually stunning and highly functional mobile app that aligns with your brand and goals.',
        icon: 'tabler:settings',
      },
      {
        title: '3.	Testing & Quality Assurance',
        description:
          'We conduct rigorous testing to ensure your mobile app functions flawlessly across different devices and platforms, addressing any issues before launch.',
        icon: 'tabler:template',
      },
      {
        title: '4.	Launch & Deployment',
        description: 'Once everything is tested and approved, we launch your mobile app to the app stores, ensuring a smooth and successful release.',
        icon: 'tabler:rocket',
      },
      {
        title: '5.	Support & Maintenance',
        description: 'We provide ongoing support and maintenance to keep your mobile app running smoothly and efficiently, with regular updates and enhancements.',
        icon: 'tabler:tools',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1576153192621-7a3be10b356e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1674&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">What to expect:</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Cross-Platform Compatibility',
        description:"Develop mobile apps that are compatible with multiple operating systems, including iOS and Android, to reach a broader audience and maximize your app's market potential.",
        icon: 'tabler:wifi-off',
      },
      {
        title: 'Offline Functionality',
        description:
          "Implement offline capabilities into your mobile app, allowing users to access certain features and content even when they're not connected to the internet. This enhances user experience and ensures uninterrupted usage in areas with limited connectivity.",
        icon: 'tabler:file-download',
      },
      {
        title: 'Push notifications',
        description: " Integrate push notification functionality into your mobile app to engage users, deliver real-time updates, and re-engage inactive users. Push notifications can be personalized and targeted based on user behavior, preferences, and location, increasing user retention and app engagement.",
        icon: 'tabler:refresh',
      },
      {
        title: 'App Analytics & Insights',
        description: " Incorporate analytics tools into your mobile app to track user behavior, gather actionable insights, and measure key performance metrics. By analyzing user interactions, usage patterns, and app performance, you can make data-driven decisions to optimize your app and enhance user experience.",
        icon: 'tabler:heart',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1453738773917-9c3eff1db985?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Vintage Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">More features</h3>
    </Fragment>
  </Content>

   <!-- Brands Widget ****************** -->

   <Brands
   title="We leverage cutting-edge and latest web technologies"
   subtitle="Discover the robust web technologies we harness to create dynamic and engaging online experiences."
   icons={[]}
   images={[
     {
       src: 'https://brandify-site-images.s3.me-central-1.amazonaws.com/brand-logos/astrojs.svg',
       alt: 'AstroJS',
     },
     {
       src: 'https://brandify-site-images.s3.me-central-1.amazonaws.com/brand-logos/node.svg',
       alt: 'NodeJS',
     },
     {
       src: 'https://brandify-site-images.s3.me-central-1.amazonaws.com/brand-logos/react.svg',
       alt: 'React',
     },
     {
       src: 'https://brandify-site-images.s3.me-central-1.amazonaws.com/brand-logos/mongodb.svg',
       alt: 'MongoDB',
     },
     {
       src: 'https://brandify-site-images.s3.me-central-1.amazonaws.com/brand-logos/amazon-web-services.svg',
       alt: 'Amazon Web Services',
     },
     {
       src: 'https://brandify-site-images.s3.me-central-1.amazonaws.com/brand-logos/DigitalOcean.svg',
       alt: 'DigitalOcean',
     },
   ]}
 />


<!-- Testimonials Widget *********** -->

<Testimonials
