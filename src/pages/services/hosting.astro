---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

const metadata = {
  title: 'Hosting Services | Brandify Media',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
  tagline="Hosting Services"
  actions={[
    { variant: 'primary', target: '_blank', text: 'Get Started', href: '/contact' },
    { text: 'Learn more', href: '#features' },
  ]}
  image={{
    src: 'https://images.unsplash.com/photo-1580481072645-022f9a6dbf27?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    alt: 'Brandify Hero Image',
  }}
>
  <Fragment slot="title">
    <span class="text-accent dark:text-white highlight"
      >Reliable Hosting Solutions</span> for your Website or App
  </Fragment>

  <Fragment slot="subtitle">
    <span class="hidden sm:inline">Ensure
    <span class="font-semibold">your website stays online </span>and accessible to customers with our dependable hosting solutions. </span
    >
    From shared hosting to dedicated servers, we offer a range of options to suit your needs and budget. 
  </Fragment>
</Hero2>

  <!-- Features3 Widget ************** -->

  <Features3
    id="features"
    title="Looking for Reliable and Secure Hosting Solutions for Your Business Website?"
    subtitle="Our hosting solutions are designed to provide businesses with reliable and secure hosting options for their websites. Whether you're a small blog or a large e-commerce site, we have the infrastructure and expertise to keep your site up and running smoothly."
    tagline="Service Overview"
    columns={2}
    items={[
      {
        title: 'Reliability',
        description: `Keep your website online and accessible to customers with our reliable hosting solutions and 99.9% uptime guarantee.`,
        icon: 'tabler:square-number-1',
      },
      {
        title: 'Scalability',
        description:
          'Scale your hosting plan as your website grows, with options for shared hosting, VPS hosting, and dedicated servers.',
        icon: 'tabler:square-number-2',
      },
      {
        title: 'Security',
        description: 'Protect your website and customer data with our robust security measures, including firewalls, malware scanning, and SSL certificates.',
        icon: 'tabler:square-number-3',
      },
      {
        title: 'Performance',
        description: `Ensure fast page load times and optimal performance for your website with our high-speed servers and advanced caching technologies.`,
        icon: 'tabler:square-number-4',
      },
      {
        title: 'Support',
        description: `Get peace of mind knowing that our expert support team is available around the clock to assist you with any issues or questions.`,
        icon: 'tabler:square-number-5',
      },
      {
        title: 'Cost-Efficiency',
        description: ` Enjoy cost-effective hosting solutions tailored to your business needs, helping you save on infrastructure costs while maximizing performance and reliability.`,
        icon: 'tabler:square-number-6',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1521517407911-565264e7d82d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80',
      alt: 'Colorful Image',
    }}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: '1.	Assessment',
        description:
          'We start by assessing your hosting needs and requirements, taking into account factors such as website traffic, resource usage, and security.',
        icon: 'tabler:wand',
      },
      {
        title: '2.	Recommendation',
        description:
          "Based on our assessment, we recommend the hosting solution that best fits your needs and budget, whether it's shared hosting, VPS hosting, or dedicated servers.",
        icon: 'tabler:settings',
      },
      {
        title: '3.	Setup & Configuration',
        description:
          "Once you've chosen a hosting plan, we handle the setup and configuration of your hosting environment, ensuring everything is optimized for performance and security.",
        icon: 'tabler:template',
      },
      {
        title: '4.	Migration',
        description: "If you're transferring an existing website to our hosting platform, we assist with the migration process, ensuring a smooth transition with minimal downtime.",
        icon: 'tabler:rocket',
      },
      {
        title: '5.	Monitoring & Maintenance',
        description: "We monitor your hosting environment 24/7 to ensure optimal performance and security, with regular updates and maintenance to keep everything running smoothly.",
        icon: 'tabler:tools',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1576153192621-7a3be10b356e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1674&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">How it works:</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Backup Solutions',
        description:"Safeguard your website data with automated backup solutions, allowing you to restore your website quickly in case of data loss or corruption.",
        icon: 'tabler:wifi-off',
      },
      {
        title: 'Control Panel',
        description:
          "Manage your hosting environment easily with a user-friendly control panel, offering intuitive tools and features for website management, domain management, and more.",
        icon: 'tabler:file-download',
      },
      {
        title: 'Content Delivery Network (CDN)',
        description: "Enhance your website's speed and performance by leveraging a global network of servers to deliver content to users from the nearest location, reducing latency and improving user experience.",
        icon: 'tabler:refresh',
      },
      {
        title: 'Advanced Security Features',
        description: "Enhance your website's security with features like DDoS protection, two-factor authentication, and regular security audits to mitigate cyber threats.",
        icon: 'tabler:heart',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1453738773917-9c3eff1db985?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Vintage Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">More features</h3>
